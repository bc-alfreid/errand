<div class="row">


  <div class="col-md-6 no-col-padding">

    <div class="panel panel-home-search-runner">
      <div class="panel-body">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-pills" role="tablist">
          <li role="presentation" class="active"><a href="#runoffers" role="tab" data-toggle="tab">Current Run Offers</a></li>
          <li role="presentation"><a href="#runrequests" role="tab" data-toggle="tab">Current Run Requests</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active" id="runoffers">

            <% i = 1 %>
            <% @all_run_registrations.each do |run_registration| %>

              <div class="panel panel-info">
                <div class="panel-heading" role="tab" id="headingThree<%= i %>">
                  <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree<%= i %>" aria-expanded="false" aria-controls="collapseThree<%= i %>">
                      <span>
                        <%= run_registration.desciption %>

                      </span>
                    </a>
                  </h4>
                </div>
                <div id="collapseThree<%= i %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree<%= i %>">
                  <div class="panel-body">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                      <li role="presentation" class="active"><a href="#offerdetails<%= i %>" role="tab" data-toggle="tab">Run Offer Details</a></li>
                      <li role="presentation"><a href="#runnerdetails<%= i %>" role="tab" data-toggle="tab">Runner Details</a></li>
                      <li role="presentation"><a href="#messages<%= i %>" role="tab" data-toggle="tab">Messages</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">

                      <div class="tab-pane active" id="offerdetails<%= i %>">
                        <%= render partial:"run_registrations/run_registration", locals:{run_registration:run_registration} %>

                      </div>

                      <div class="tab-pane active" id="runnerdetails<%= i %>">

                      </div>

                      <div class="tab-pane active" id="messages<%= i %>">
                        </br>

                      </div>

                    </div>
                  </div>
                </div>
              </div>
              <% i = i + 1 %>
            <% end %>
          </div>

          <div class="tab-pane " id="runrequests">

          </div>

        </div>

      </div>
    </div>
  </div>


  <div class="col-md-6 no-col-padding">
    <div class="panel panel-login">
      <div class="panel-body">
        <div><h1>Welcome to E-RRAND</h1></div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, placeholder: 'Email', label: false %>
              <%= f.input :password, required: false, placeholder: 'Password', label: false %>

              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>